<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.gcmobile.func.account.mapper.BaseAccountMapper">
	
	<!-- 结果集 -->
	<resultMap type="com.gcmobile.func.account.entity.Account" id="accountResultMap">
		<id property="id" column="id" />
		<result property="userId" 					column="USER_ID" />
		<result property="total" 					column="TOTAL" />
		<result property="useMoney" 				column="USE_MONEY" />
		<result property="noUseMoney" 				column="NO_USE_MONEY" />
		<result property="drawMoney"				column="DRAW_MONEY"/>
		<result property="noDrawMoney" 				column="NO_DRAW_MONEY"/>
	</resultMap>
	
	<!--基本列 -->
	<sql id="accountBaseColumn">
		a.ID, 
		a.USER_ID, 
		a.TOTAL, 
		a.USE_MONEY, 
		a.NO_USE_MONEY, 
		a.DRAW_MONEY,
		a.NO_DRAW_MONEY
	</sql>
	
	<!-- 插入记录，返回主键 -->
	<insert id="insertEntity" parameterType="com.gcmobile.func.account.entity.Account">
		INSERT INTO t_account 
		(USER_ID,	TOTAL,	USE_MONEY,	NO_USE_MONEY	)
		VALUES
		(#{userId},#{total},#{useMoney},#{noUseMoney})
		
 		 <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">  
      	    SELECT LAST_INSERT_ID() AS ID    
   		 </selectKey>
	</insert>
	
  	<!-- 根据ID查询 -->
	<select id="queryById" parameterType="java.lang.Integer" resultMap="accountResultMap" >
		select 	
		   <include refid="accountBaseColumn"/>
		from
			t_account a
		where 1=1
		and a.id=#{id}
  	</select>
  	
  	<!-- 根据ID查询 -->
	<select id="queryByUserIdForUpdate" parameterType="java.lang.Integer" resultMap="accountResultMap" >
		select 	
		   <include refid="accountBaseColumn"/>
		from
			t_account a
		where 1=1
		and a.user_id=#{userId}
		FOR UPDATE
  	</select>
	
  <!-- 更新-->
  <update id="updateEntity" parameterType="com.gcmobile.func.account.entity.Account" >
    update t_account
    <set >
      <if test="total != null" >
        TOTAL = #{total},
      </if>
      <if test="useMoney != null" >
        USE_MONEY = #{useMoney},
      </if>
      <if test="noUseMoney != null" >
        NO_USE_MONEY = #{noUseMoney},
      </if>
      <if test="drawMoney != null" >
        DRAW_MONEY = #{drawMoney},
      </if>
       <if test="noDrawMoney != null" >
        NO_DRAW_MONEY = #{noDrawMoney},
      </if>
    </set>
    where ID = #{id}
  </update>
  	
</mapper>  