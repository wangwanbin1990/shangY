<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.gcmobile.func.sms.mapper.SmsTemplateMapper">
	
	<!-- 返回的结果集 -->
	<resultMap type="com.gcmobile.func.sms.entity.SmsTemplateVo" id="smsTemplateMapperResultMap">
		<id property="id" column="id" />
		<result property="type" 		column="TYPE" />
		<result property="content" 		column="CONTENT" />
		<result property="flag"	    column="FLAG" />
		<result property="remark"		column="REMARK" />
	</resultMap>
	
	<!--基本列 -->
	<sql id="smsTemplateBaseColumn">
		s.TYPE, 
		s.CONTENT, 
		s.FLAG, 
		s.REMARK
	</sql>
	
	<!-- 封装查询条件 -->
	<sql id="smsTemplate_Where_Clause">
		<if test="id != null">
			and s.id =#{id}
		</if>
		<if test="type != null ">
			and s.TYPE = #{type}
		</if>
		<if test="flag != null ">
			and s.FLAG = #{flag}
		</if>		
	</sql>
	
  	<!-- 根据条件查询记录集合 -->
	<select id="querySmsTemplateList" parameterType="com.gcmobile.func.sms.entity.SmsTemplateCnd" resultMap="smsTemplateMapperResultMap" >
		select 	
		   <include refid="smsTemplateBaseColumn"/>
		from
			t_sms_template s
		where 1=1
		<include refid="smsTemplate_Where_Clause"/>
  	</select>
  	
</mapper>  